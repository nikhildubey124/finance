# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-to-something-random

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Email Configuration (Flask-Mail)
# For Gmail: Use App Password (not your regular Gmail password)
# Enable 2FA on Gmail, then generate App Password at: https://myaccount.google.com/apppasswords

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Alternative: SendGrid Configuration
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_DEFAULT_SENDER=noreply@yourdomain.com
